<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MessageProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MessageProject.styles.css" asp-append-version="true" />
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script type="module" src="~/lib/vue/dist/vue.esm-browser.js" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/microsoft/signalr/dist/browser/signalr.js")"></script>
</head>
<body>

    <header>        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div id="navbarContent" class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MessageProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Message" asp-action="List">Message List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Message" asp-action="Chat">Chat Room</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Member
                            </a>
                            <ul id="dropMenu" class="dropdown-menu" aria-labelledby="navbarDropdown">                           
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-action="ChangePassword">ChangePassword</a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-action="Logout">Logout</a>
                                    </li>
                                    <li >
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-action="Login">Login</a>
                                    </li>                              
                                    <li >
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Member" asp-action="AddAdmin">AddAdmin</a>
                                    </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div id="app" class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MessageProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/dist/App.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
